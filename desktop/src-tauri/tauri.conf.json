{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SelfTracker",
  "version": "1.1.5",
  "identifier": "com.alotfy.selftracker",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SelfTracker",
        "url": "index.html",
        "center": true,
        "maximized": true,
        "width": 1920,
        "height": 1080,
        "backgroundColor": "#0f172a"
      },
      {
        "label": "timer-overlay",
        "title": "Timer Overlay",
        "url": "/timer-overlay",
        "width": 300,
        "height": 100,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "center": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libayatana-appindicator3-1"
        ]
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "selftracker"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ2MDRFQ0U3Q0MwRkVCRDEKUldUUjZ3L001K3dFUnV6S1FrMHNlWUc0TlNVWHkyMWlWZVlTWmNmTTFYd2RqVEo0TVlTRzhxZWoK",
      "endpoints": [
        "https://github.com/ahmed-lotfy-dev/selfTracker/releases/latest/download/latest.json"
      ]
    }
  }
}
